import java.util.Scanner; 
    class Student{
        String name;
        String id;
        int hours = 0;

        public Student(String name, String id){
            this.name = name;
            this.id = id;
        }

        public void addHours(double hours){
            this.hours += hours;
        }

        public double getHoursAsPercentage(double totalHours){
            return hours * 100.0 / totalHours;
        }
    }
class Main{   
	
	public static void main(String args[]) { 
	
		Scanner s = new Scanner(System.in); 
		String newline = System.lineSeparator(); 
	
	System.out.println("Please enter the Module name:");
		String module = s.nextLine();
		
	System.out.println(newline);
	
		System.out.println(module+" Attendance Calculation");
		
	System.out.println(newline);

	System.out.println("Please enter the number of students:");
	int n = s.nextInt();

	Student[] students = new Student[n];

	for (int i=0; i<n; i++){

    System.out.println(newline);
    System.out.print("Enter Student name # " + (i + 1) + ": ");
    String name = s.next();

    System.out.print("Enter Student ID # " + (i + 1) + ": ");
    String id = s.next();

    students[i] = new Student(name, id);
    
    
	System.out.println(newline);
			
		
			System.out.println("Enter Number of weeks: ");
			int w = s.nextInt();
		
		
		
      	for(int t=0; t<w; t++) {
      	
          
        	System.out.print("Attendance for week # "+(t+1)+": ");
        	double hours = s.nextDouble(); 
        	students[i].addHours(t,hours);
      	}
	
        	
  	
        for(int t=0; t<n; t++){

       students[i].addHours(double totalHours);
	System.out.println(newline);
		
		System.out.println("Total hours present: "+ students[t].addHours()+ "Hours");
		System.out.println("Total hours conducted: "+(4*w)+"Hours");
		System.out.printf("Overall attandence is : %.2f%%%n"+students[t].getHoursAsPercentage());
		
		
		if (students[i].getHoursAsPercentage()>=55) {
			System.out.println("Your attandance is above 55%, your grades are accepted");
		}
		else {
			System.out.println("Your attandance is below 55%, you are marked absent");
		}
}
}
}
}
